<div class="card my-3">
  <h2 class="card-header form-title">Create New Post</h2>
  <div class="card-body form-bg-custom">
    <form id="new-post-form" name="new-post-form">
      <div class="form-group">
 <div>
 <h3 style="color: #218380">Upload Image</h3>
          <form method="POST" action="/api/posts" enctype="multipart/form-data">
          <input type="file" name="image">
          <textarea
            class="form-control"
            rows="5"
            id="post-text"
            name="post_text"
          ></textarea>
        </div>
      </div>
      <button type="submit" class="btn btn-custom" value="Upload">Submit Post</button>
    </form>
  </div>
</div>

{{#if posts.length}}
 <section>
    <h2 class="section-title">Your Posts</h2>
    <div>
      {{#each posts as |post|}}
        <li>
           {{> post-info post}}
           <button class="btn" id="edit-post-btn">
            <a href="/dashboard/edit/{{id}}">Edit Post</a>            
          </button>
        </li>
      {{/each}}
    </div>
  </section>
{{/if}}

<script src="/javascript/add-post.js"></script>