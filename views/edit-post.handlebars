<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="card my-5">
    <h2 class="card-header form-title">
      Edit Post
    </h2>
    <div class="card-body form-bg-custom">
      <form>
        <div class="form-group">
          <textarea
            type="text"
            class="form-control"
            id="edit-post"
            rows="5"
          >{{post.contents}}</textarea>
        </div>
        <div>
          by you on
          {{format_date post.created_at}}
          |
          <a href="/post/{{post.id}}">{{post.comments.length}}
            {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button class="btn btn-custom" type="submit">Save post</button>
        <button type="button" class="btn" id="delete-post-btn">Delete post</button>
      </form>
    </div>
  </div>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>