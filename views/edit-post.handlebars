<article>
  <h5 class="app-link mt-3">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  </h5>
  <div class="card mt-2">
    <h2 class="card-header form-title">
      Edit Post
    </h2>
    <div class="card-body form-bg-custom">
      <form class="edit-post-form">
        <div class="form-group">
          <textarea
            type="text"
            class="form-control"
            name="edit-post"
            rows="5"
          >{{post.post_text}}</textarea>
        </div>
        <div>
          by you on
          {{format_date post.created_at}}
          |
          <a class="app-link" href="/post/{{post.id}}">{{post.comments.length}}
            {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button class="btn btn-custom" type="submit">Save post</button>
        <button class="btn" type="button" id="delete-post-btn">Delete post</button>
      </form>
    </div>
  </div>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>