<section class="comments">
  {{#each this}}
    <div class="comment card mb-2">
      <div class="card-header form-title">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="card-body form-bg-custom">
        {{comment_text}}
      </div>
    </div>
  {{/each}}
</section>